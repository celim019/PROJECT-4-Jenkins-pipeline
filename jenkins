pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git (Replace with your actual Git URL)
                git url: 'https://github.com/celim019/pipeline.git'  // Change this to your actual repository URL
            }
        }
        stage('Setup Environment') {
            steps {
                echo "Creating virtual environment..."
                // Use double backslashes to escape them in Groovy
                bat 'C:\\Users\\saali\\AppData\\Local\\Microsoft\\WindowsApps\\python.exe -m venv venv'
                
                echo "Activating virtual environment..."
                // No need to escape in this command, but make sure to use double backslashes if necessary
                bat 'call venv\\Scripts\\activate.bat'
                
                echo "Installing dependencies..."
                // Install dependencies from requirements.txt
                bat 'C:\\Users\\saali\\AppData\\Local\\Microsoft\\WindowsApps\\python.exe -m pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                echo "Running tests..."
                // Example of running tests
                bat 'venv\\Scripts\\python.exe -m pytest'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Add your deployment commands here
                // Example: bat 'venv\\Scripts\\python.exe deploy.py'
            }
        }
    }
    post {
        always {
            echo "Cleaning up workspace..."
            // Clean up the workspace after build (optional)
            cleanWs()
        }
    }
}
