pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from Git (Replace with your actual Git URL)
                git url: 'https://github.com/celim019/pipeline.git'  // Change this to your actual repository URL
            }
        }
        stage('Setup Environment') {
            steps {
                echo "Creating virtual environment..."
                // Create a Python virtual environment (use double backslashes for paths in Windows)
                bat 'C:\Users\saali\AppData\Local\Microsoft\WindowsApps\python.exe'
                
                echo "Activating virtual environment..."
                // Activate virtual environment (no need for double backslashes here)
                bat 'call venv\\Scripts\\activate.bat'
                
                echo "Installing dependencies..."
                // Install dependencies from requirements.txt
                bat 'C:\\Users\\Windows\\AppData\\Local\\Programs\\Python\\Python312\\Scripts\\pip.exe install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                echo "Running tests..."
                // Add your test commands here, e.g., pytest, unittest, etc.
                // If you're using pytest:
                bat 'venv\\Scripts\\python.exe -m pytest'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying application..."
                // Add your deployment commands here
                // Example: bat 'deploy_script.bat' or bat 'venv\\Scripts\\python.exe deploy.py'
            }
        }
    }
    post {
        always {
            echo "Cleaning up workspace..."
            // Clean up the workspace after build (optional)
            cleanWs()
        }
    }
}
